@inherits BaseCalculatorComponent
@inject NavigationManager NavigationManager

<div class="align-items-center d-flex flex-column justify-content-center vh-100">
    <p class="lead">
        @Message
    </p>
    <button type="button" class="btn btn-primary" @onclick="NavigateHome">
        Go home
    </button>
</div>

@code
{
    [Parameter]
    public string? Message { get; set; }

    [Parameter]
    public bool IsError { get; set; }

    private void NavigateHome() => NavigationManager.NavigateTo("/", IsError, IsError);
}